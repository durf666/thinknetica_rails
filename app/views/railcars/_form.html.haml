= form_for(@railcar) do |f|
  - if @railcar.errors.any?
    #error_explanation
      %h2
        = pluralize(@railcar.errors.count, "error")
        prohibited this railcar from being saved:
      %ul
        - @railcar.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :upper_seat_number
    %br/
    = f.text_field :upper_seat_number
  .field
    = f.label :lower_seat_number
    %br/
    = f.text_field :lower_seat_number
  .field
    = f.label :railcar_type
    %br
      = f.collection_select :railcar_type_id, RailcarType.all, :id, :railcar_type
  .field
    = f.label :train
    %br
      = f.collection_select :train_id, Train.all, :id, :number

  %button{:name => "button", :type => "submit"} Сохранить