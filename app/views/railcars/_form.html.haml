= form_for(@railcar) do |f|
  - if @railcar.errors.any?
    #error_explanation
      %h2
        = pluralize(@railcar.errors.count, "error")
        prohibited this railcar from being saved:
      %ul
        - @railcar.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :number
    %br/
    = f.text_field :number
  .field
    = f.label :upper_seats
    %br/
    = f.text_field :upper_seats
  .field
    = f.label :lower_seats
    %br/
    = f.text_field :lower_seats
  .field
    = f.label :side_upper_seats
    %br/
    = f.text_field :side_upper_seats
  .field
    = f.label :side_lower_seats
    %br/
    = f.text_field :side_lower_seats
  .field
    = f.label :seating_seats
    %br/
    = f.text_field :seating_seats

  .field
    = f.label :railcar_type
    %br
      = f.collection_select :railcar_type_id, RailcarType.all, :id, :display_name
  .field
    = f.label :train
    %br
      = f.collection_select :train_id, Train.all, :id, :number

  %button{:name => "button", :type => "submit"} Сохранить