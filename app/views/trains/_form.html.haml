= form_for(@train) do |f|
  - if @train.errors.any?
    #error_explanation
      %h2
        = pluralize(@train.errors.count, "error")
        prohibited this train from being saved:
      %ul
        - @train.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :number
    %br/
    = f.number_field :number
  .field
    = f.label :current_station, "Текущая станция:"
    %br/
    = f.collection_select :current_station_id, RailwayStation.all, :id, :name
  .field
    = f.label :current_station, "На маршруте:"
    %br/
    = f.collection_select :route_id, Route.all, :id, :name
  .field
    = f.label :current_station, "Обратный порядок сортировки вагонов:"
    = f.check_box :sort_order 
  .actions
    = f.submit

