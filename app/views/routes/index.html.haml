%p#notice= notice
%h1 Список маршрутов
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @routes.each do |route|
      %tr
        %td= route.name
        %td= link_to 'Показать', route
        %td= link_to 'Редактировать', edit_route_path(route)
        %td= link_to 'Удалить', route, method: :delete, data: { confirm: 'Вы уверены?' }
%br/
= link_to 'Добавить маршрут', new_route_path